<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    xmlns:converters="clr-namespace:Connect4Game.Converters">

    <!-- Converters -->
    <converters:InvertedBoolConverter x:Key="InvertedBoolConverter" />
    <converters:CountToBoolConverter x:Key="CountToBoolConverter" />
    
    <!-- Colors -->
    <Color x:Key="PrimaryBackgroundColor">#1a1a2e</Color>
    <Color x:Key="SecondaryBackgroundColor">#16213e</Color>
    <Color x:Key="AccentBackgroundColor">#0f3460</Color>
    <Color x:Key="PrimaryAccentColor">#e94560</Color>
    <Color x:Key="SecondaryAccentColor">#FFD700</Color>
    <Color x:Key="TextPrimaryColor">#FFFFFF</Color>
    <Color x:Key="TextSecondaryColor">#87CEEB</Color>
    <Color x:Key="Player1Color">#FF4444</Color>
    <Color x:Key="Player2Color">#4444FF</Color>
    
    <!-- Platform-specific fonts -->
    <OnPlatform x:Key="EmojiFont" x:TypeArguments="x:String">
        <On Platform="Windows" Value="Segoe UI Emoji, Segoe UI Symbol, Arial Unicode MS, Arial" />
        <On Platform="Android" Value="Noto Color Emoji, Noto Emoji, Roboto, sans-serif" />
        <On Platform="iOS" Value="Apple Color Emoji, SF Pro Display, Helvetica" />
        <On Platform="MacCatalyst" Value="Apple Color Emoji, SF Pro Display, Helvetica" />
    </OnPlatform>
    
    <OnPlatform x:Key="RegularFont" x:TypeArguments="x:String">
        <On Platform="Windows" Value="Segoe UI, Arial" />
        <On Platform="Android" Value="Roboto, Noto Sans, sans-serif" />
        <On Platform="iOS" Value="SF Pro Display, Helvetica" />
        <On Platform="MacCatalyst" Value="SF Pro Display, Helvetica" />
    </OnPlatform>
    
    <OnPlatform x:Key="SymbolFont" x:TypeArguments="x:String">
        <On Platform="Windows" Value="Segoe UI Symbol, Segoe UI, Arial Unicode MS" />
        <On Platform="Android" Value="Noto Sans Symbols, Roboto, sans-serif" />
        <On Platform="iOS" Value="SF Pro Display, Helvetica" />
        <On Platform="MacCatalyst" Value="SF Pro Display, Helvetica" />
    </OnPlatform>
    
    <!-- Button Styles -->
    <Style x:Key="PrimaryButtonStyle" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource PrimaryAccentColor}" />
        <Setter Property="TextColor" Value="{StaticResource TextPrimaryColor}" />
        <Setter Property="FontFamily" Value="{StaticResource RegularFont}" />
        <Setter Property="FontSize" Value="18" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="CornerRadius" Value="25" />
        <Setter Property="HeightRequest" Value="50" />
    </Style>
    
    <Style x:Key="SecondaryButtonStyle" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource AccentBackgroundColor}" />
        <Setter Property="TextColor" Value="{StaticResource TextPrimaryColor}" />
        <Setter Property="FontFamily" Value="{StaticResource RegularFont}" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="CornerRadius" Value="25" />
        <Setter Property="HeightRequest" Value="45" />
    </Style>

	<!-- Game Page Tap able button Styling-->
	<Style x:Key="GamePage_Button" TargetType="Button">
		<Setter Property="BackgroundColor" Value="{StaticResource PrimaryAccentColor}" />
		<Setter Property="TextColor" Value="{StaticResource TextPrimaryColor}" />
		<Setter Property="FontFamily" Value="{StaticResource RegularFont}" />
		<Setter Property="FontSize" Value="32" />
		<Setter Property="FontAttributes" Value="Bold" />
		<Setter Property="CornerRadius" Value="25" />
		<Setter Property="HeightRequest" Value="50" />
		<Setter Property="WidthRequest" Value="50" />
		<Setter Property="HorizontalOptions" Value="Center" />
		<Setter Property="VerticalOptions" Value="Center" />
	</Style>
    
    <!-- Frame Styles -->
    <Style x:Key="CardFrameStyle" TargetType="Frame">
        <Setter Property="BackgroundColor" Value="{StaticResource SecondaryBackgroundColor}" />
        <Setter Property="CornerRadius" Value="15" />
        <Setter Property="HasShadow" Value="True" />
        <Setter Property="Padding" Value="20" />
    </Style>
    
    <!-- Label Styles -->
    <Style x:Key="HeadingLabelStyle" TargetType="Label">
        <Setter Property="FontSize" Value="24" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="FontFamily" Value="{StaticResource EmojiFont}" />
        <Setter Property="TextColor" Value="{StaticResource SecondaryAccentColor}" />
        <Setter Property="HorizontalOptions" Value="Center" />
    </Style>
    
    <Style x:Key="SubheadingLabelStyle" TargetType="Label">
        <Setter Property="FontSize" Value="18" />
        <Setter Property="FontFamily" Value="{StaticResource RegularFont}" />
        <Setter Property="TextColor" Value="{StaticResource TextSecondaryColor}" />
        <Setter Property="HorizontalOptions" Value="Center" />
    </Style>
    
    <Style x:Key="EmojiLabelStyle" TargetType="Label">
        <Setter Property="FontFamily" Value="{StaticResource EmojiFont}" />
        <Setter Property="TextColor" Value="{StaticResource SecondaryAccentColor}" />
    </Style>
    
</ResourceDictionary>