    <ContentPage.Resources>
        <ResourceDictionary>
            <!-- Platform-specific emoji fonts -->
            <OnPlatform x:Key="EmojiFont" x:TypeArguments="x:String">
                <On Platform="Windows" Value="Segoe UI Emoji" />
                <On Platform="Android" Value="Noto Color Emoji" />
                <On Platform="iOS" Value="Apple Color Emoji" />
                <On Platform="MacCatalyst" Value="Apple Color Emoji" />
            </OnPlatform>
            
            <!-- Platform-specific symbol fonts -->
            <OnPlatform x:Key="SymbolFont" x:TypeArguments="x:String">
                <On Platform="Windows" Value="Segoe UI Symbol" />
                <On Platform="Android" Value="Noto Sans Symbols" />
                <On Platform="iOS" Value="SF Pro Display" />
                <On Platform="MacCatalyst" Value="SF Pro Display" />
            </OnPlatform>
        </ResourceDictionary>
    </ContentPage.Resources>

