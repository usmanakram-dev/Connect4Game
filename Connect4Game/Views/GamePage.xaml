                               FontSize="32" FontAttributes="Bold" FontFamily="{StaticResource SymbolFont}"
                               TextColor="White" HorizontalOptions="Center" VerticalOptions="Center"/>
                    </Border>
                    
                    <Border Grid.Row="5" Grid.Column="5" 
                            BackgroundColor="{Binding Cell55.BackgroundColor}" 
                            Stroke="#FFD700" StrokeThickness="2"
                            WidthRequest="50" HeightRequest="50"
                            HorizontalOptions="Center" VerticalOptions="Center">
                        <Border.StrokeShape><RoundRectangle CornerRadius="25"/></Border.StrokeShape>
                        <Label Text="{Binding Cell55.DisplayText}" 
                               FontSize="32" FontAttributes="Bold" FontFamily="{StaticResource SymbolFont}"
                               TextColor="White" HorizontalOptions="Center" VerticalOptions="Center"/>
                    </Border>
                    
                    <Border Grid.Row="5" Grid.Column="6" 
                            BackgroundColor="{Binding Cell56.BackgroundColor}" 
                            Stroke="#FFD700" StrokeThickness="2"
                            WidthRequest="50" HeightRequest="50"
                            HorizontalOptions="Center" VerticalOptions="Center">
                        <Border.StrokeShape><RoundRectangle CornerRadius="25"/></Border.StrokeShape>
                        <Label Text="{Binding Cell56.DisplayText}" 
                               FontSize="32" FontAttributes="Bold" FontFamily="{StaticResource SymbolFont}"
                               TextColor="White" HorizontalOptions="Center" VerticalOptions="Center"/>
                    </Border>
                </Grid>
            </Frame>

            <!-- Action Buttons -->
            <Grid Grid.Row="3" 
                  ColumnDefinitions="*,*" 
                  ColumnSpacing="10" 
                  Margin="10">
                
                <Button Grid.Column="0" 
                        Text="↻ Reset Game" 
                        FontFamily="{StaticResource SymbolFont}"
                        BackgroundColor="#0f3460" 
                        TextColor="White"
                        FontSize="16"
                        CornerRadius="25"
                        HeightRequest="50"
                        Command="{Binding ResetGameCommand}"/>
                
                <Button Grid.Column="1" 
                        Text="← Leave Game" 
                        FontFamily="{StaticResource SymbolFont}"
                        BackgroundColor="#8B0000" 
                        TextColor="White"
                        FontSize="16"
                        CornerRadius="25"
                        HeightRequest="50"
                        Command="{Binding LeaveGameCommand}"/>
            </Grid>
        </Grid>
    </ScrollView>
</ContentPage>