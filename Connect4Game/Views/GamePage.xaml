                    <Label Text="{Binding GameStatusText}" 
                           FontSize="24" 
                           FontAttributes="Bold" 
                           TextColor="#FFD700" 
                           FontFamily="{StaticResource EmojiFont}"
                           HorizontalOptions="Center"/>
                    
                    <Label Text="{Binding CurrentPlayerText}" 
                           FontSize="18" 
                           TextColor="#87CEEB" 
                           FontFamily="{StaticResource EmojiFont}"
                           HorizontalOptions="Center"
                           IsVisible="{Binding IsGameActive}"/>
                </StackLayout>
            </Frame>

